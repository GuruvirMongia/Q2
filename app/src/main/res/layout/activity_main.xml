<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/a"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Your Game is Here to Solve"
        android:textSize="29dp"
        android:textColor="#000000"
        android:paddingLeft="40dp"
        android:fontFamily="sans-serif-condensed"/>

    <EditText
        android:id="@+id/min"
        android:textColor="#F20A0A"
        android:textColorHint="#E81515"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="103dp"
        android:hint="Maximum Range"
        android:inputType="number"
        android:fontFamily="sans-serif-condensed-medium"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/max"
        android:textColor="#F20A0A"
        android:textColorHint="#EA0606"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="192dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Minimum Range"
        android:inputType="number"
        android:textSize="30dp" />

    <Button
        android:id="@+id/start"
        android:layout_width="243dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="274dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Press To Load"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/suggest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="357dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:hint="Enter the number"
        android:textColorHint="#EA0C0C"
        android:textColor="#F50A0A"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="98dp"
        android:layout_marginTop="442dp"
        android:textColor="#ED0808"
        android:textColorHint="#F80F0F"
        android:hint="Type your Hint"
        android:textSize="30dp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="134dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="145dp"
        android:layout_marginTop="536dp"
        android:layout_marginBottom="121dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Verify"
        android:textSize="25dp" />

</RelativeLayout>